          target: "spanish";
        }

        item {
          label: _("Czech Draughts (8×8)");
          action: "app.game-rules-radio";
          target: "czech";
        }

        item {
          label: _("Thai Draughts (8×8)");
          action: "app.game-rules-radio";
          target: "thai";
        }

        item {
