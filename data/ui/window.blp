using Gtk 4.0;
using Adw 1;

template $DraughtsWindow : Adw.ApplicationWindow {
  Gtk.Box {
    orientation: vertical;
    
    Adw.HeaderBar header_bar {
      title-widget: Adw.WindowTitle window_title {
        title: _("Draughts");
        subtitle: _("Checkers/Anglo-American Draughts");
      };

      [end]
      Gtk.MenuButton menu_button {
        icon-name: "open-menu-symbolic";
        tooltip-text: _("Main Menu");
        menu-model: primary_menu;
      }
    }

    Adw.ToastOverlay toast_overlay {
      vexpand: true;

      child: Gtk.Box board_container {
        orientation: vertical;
        spacing: 12;
        margin-top: 12;
        margin-bottom: 12;
        margin-start: 12;
        margin-end: 12;
        halign: fill;
        valign: fill;
        hexpand: true;
        vexpand: true;
      };
    }
  }
}

menu primary_menu {
  section {
    item {
      label: _("_New Game");
      action: "app.new-game";
      accel: "<primary>n";
    }

    item {
      label: _("_Reset Game");
      action: "app.reset-game";
      accel: "<primary>r";
    }

    item {
      label: _("_Scores");
      action: "app.scores";
      accel: "<primary>s";
    }
  }

  section {
    submenu {
      label: _("Game _Rules");

      section {
        item {
          label: _("Checkers/Anglo-American Draughts (8×8)");
